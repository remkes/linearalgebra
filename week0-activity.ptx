              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
            </row>
            <row bottom="minor">
              <cell left="minor" right="minor">Absolute Value</cell>
              <cell right="minor">Yes, Trivially</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Maybe</cell>
            </row>
            <row bottom="minor">
              <cell left="minor" right="minor">Order (Greater Than,
              Less Than)</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">Yes</cell>
              <cell right="minor">No</cell>
            </row>
            <row bottom="minor">
              <cell left="minor" right="minor">Zero Divisors</cell>
              <cell right="minor">No</cell>
              <cell right="minor">No</cell>
              <cell right="minor">No</cell>
              <cell right="minor">No</cell>
